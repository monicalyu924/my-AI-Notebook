{
  "version": 2,
  "name": "ai-notebook-frontend",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "VITE_APP_NAME": "AI智能记事本",
    "VITE_APP_VERSION": "2.0.0",
    "VITE_ENABLE_PWA": "true"
  },
  "build": {
    "env": {
      "VITE_API_BASE_URL": "@api_base_url"
    }
  },
  "regions": ["hkg1", "sin1"],
  "functions": {
    "frontend/dist/**": {
      "maxDuration": 10
    }
  }
}
