{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "isolatedModules": true,
    "types": ["node"],
    "composite": true,
    "noEmit": true
  },
  "include": [
    "vite.config.js",
    "postcss.config.js",
    "tailwind.config.js",
    "eslint.config.js"
  ]
}